<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Shopping Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  
<div class="w-full h-screen bg-zinc-950 text-white">
  <!-- Navbar -->
    <header class="bg-gray-950 border-b border-gray-800">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <h1 class="text-xl font-bold text-sky-400">BagEcom</h1>
        <nav class="hidden md:flex gap-6">
            <a class="font-medium hover:text-sky-400" href="/shop">Shop</a>
            <a class="font-medium hover:text-sky-400" href="/cart">Cart</a>
            <a class="font-medium hover:text-sky-400" href="/account">Account</a>
            <a class="font-medium text-red-500 hover:text-red-600" href="/users/logout">Logout</a>
        </nav>
        </div>
    </header>

  <!-- Cart Content -->
  <main class="max-w-7xl mx-auto px-6 py-10 grid md:grid-cols-3 gap-8">
    
    <!-- Cart Items -->
    <section class="md:col-span-2 bg-gray-900 rounded-2xl shadow-lg p-6">
      <h2 class="text-2xl font-semibold mb-6">Your Cart</h2>
      
      <!-- Example Cart Item -->
      <% if (user.cart.length > 0) { %>
        <% user.cart.forEach(cartItem => { %>
        <% if (!cartItem.product) return; %>
        <div class="flex items-center justify-between bg-gray-800 rounded-xl p-4 mb-4">
          <!-- Product Info -->
          <div class="flex items-center gap-4">
            <img src="data:image/jpg;base64,<%= cartItem.product.image.toString('base64') %>" alt="<%= cartItem.product.name %>" class="w-20 h-20 object-cover rounded-xl">
            <div>
              <h3 class="font-semibold text-lg"><%= cartItem.product.name %></h3>
              <p class="text-gray-400 text-sm line-through">â‚¹<%= cartItem.product.price %></p>
              <p class="text-grey-400 text-sm">â‚¹<%= (cartItem.product.price - (cartItem.product.price * cartItem.product.discount) / 100) %></p>
            </div>
          </div>

          <!-- Quantity & Remove -->
          <div class="flex items-center gap-3">
            <form action="/cart/update/<%= cartItem.product._id %>" method="POST" class="flex items-center gap-2">
              <button type="submit" name="decrease" value="decrease" class="px-3 py-1 rounded-lg bg-gray-700 hover:bg-gray-600">-</button>
              <span class="px-2"><%= cartItem.quantity %></span>
              <button type="submit" name="increase" value="increase" class="px-3 py-1 rounded-lg bg-gray-700 hover:bg-gray-600">+</button>
            </form>
            <form action="/cart/remove/<%= cartItem.product._id %>" method="POST">
              <button type="submit" class="text-red-500 hover:text-red-600">Remove</button>
            </form>
          </div>
        </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-400">Your cart is empty ðŸ›’</p>
      <% } %>
    </section>

    <!-- Order Summary -->
     
    <aside class="bg-gray-900 rounded-2xl shadow-lg p-6 h-fit">
      <h2 class="text-2xl font-semibold mb-6">Order Summary</h2>
      
      <div class="flex justify-between mb-3">
        <span>Subtotal</span>
        <span>â‚¹<%= totalBill %></span>
      </div>
      <div class="flex justify-between mb-3">
        <span>Shipping</span>
        <span>â‚¹50</span>
      </div>
      <div class="flex justify-between font-semibold text-lg border-t border-gray-700 pt-3">
        <span>Total</span>
        <span>â‚¹<%= totalBill + 50 %></span>
      </div>
   

      <!-- Checkout Button -->
      <form action="/checkout" method="POST" class="mt-6">
        <button type="submit" class="w-full bg-sky-500 hover:bg-sky-600 text-white py-3 rounded-xl font-semibold">
          Proceed to Checkout
        </button>
      </form>

      <!-- Payment Options -->
      <div class="mt-6">
        <p class="text-sm text-gray-400 mb-2">Pay securely with:</p>
        <div class="flex gap-3">
          <img src="https://img.icons8.com/color/48/000000/visa.png" class="h-8" alt="Visa">
          <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" class="h-8" alt="MasterCard">
          <img src="https://img.icons8.com/color/48/000000/paypal.png" class="h-8" alt="PayPal">
          <img src="https://img.icons8.com/color/48/000000/google-pay-india.png" class="h-8" alt="Google Pay">
        </div>
      </div>
    </aside>
  </main>
</div>
</body>
</html>
